<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        tools:context=".ui.home.party.agent.bytedance.ByteDanceBeautyBottomSheetFragment">

        <LinearLayout
            android:id="@+id/layoutSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/transparent_icon"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.slider.Slider
                android:id="@+id/slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:valueFrom="0"
                android:valueTo="1"
                android:background="@android:color/transparent"
                app:labelBehavior="floating"
                app:labelStyle="@style/beauty_slider"
                app:thumbColor="@color/white"
                app:trackColorActive="@color/white"
                app:trackColorInactive="@color/white50Opacity"
                app:trackHeight="4dp"
                tools:value="0.5" />

            <ImageView
                android:id="@+id/ivCompare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_6dp"
                android:src="@drawable/ic_item_cut_right" />

<!--            <FrameLayout
                android:id="@+id/topCustomView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->

        </LinearLayout>

        <View
            android:id="@+id/viewContent"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/layoutSlider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_bottom_bytedance_dialog"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginVertical="@dimen/dimen_4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/viewContent"
            tools:listitem="@layout/item_beauty_tab_page" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/rvPageTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/rvPageTitle"
            android:textColor="@color/wheel_text_color"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            tools:text="Rujlar"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imageBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/recv_ic_arrow"
            android:visibility="gone"
            android:padding="@dimen/dimen_6dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@id/rvPageTitle"
            app:layout_constraintBottom_toBottomOf="@id/rvPageTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dimen_12dp" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_smoke"
            app:layout_constraintTop_toBottomOf="@id/rvPageTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/viewLine" />

        <LinearLayout
            android:id="@+id/layoutRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewLine">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBeautyEffect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dimen_12dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="4"
                tools:listitem="@layout/item_beauty_effect"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imageArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_bytedance_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="@dimen/dimen_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@id/imageRotate"
            app:layout_constraintTop_toBottomOf="@id/layoutRv" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageRotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_bytedance_refresh_rotate"
            app:layout_constraintStart_toEndOf="@id/imageArrow"
            app:layout_constraintBottom_toBottomOf="@id/imageArrow"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@id/imageArrow"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>